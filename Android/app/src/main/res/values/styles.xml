<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryDark">@color/light_gray</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/gandom</item>
    </style>

    <style name="progressBarMain" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/progress</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <!--        <item name="colorButtonNormal">@color/main</item>-->
        <!--        <item name="colorAccent">@color/main</item>-->
        <item name="colorPrimary">@color/main</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
</resources>
