<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.send.SendFragment">

    <ImageView
        android:id="@+id/iv_under_maintenance_send"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/todo"
        android:paddingBottom="100dp"
        android:src="@drawable/under_maintenance" />

    <TextView
        android:id="@+id/tv_under_maintenance_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_under_maintenance_send"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:text="@string/under_maintenance"
        android:textSize="20sp" />

</RelativeLayout>